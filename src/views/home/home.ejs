<section class="home">
    <section class="main background">

        <div class="main-text d-flex justify-content-center align-items-center">
            <div class="mr-5">
                <p class="ff-axia fs-27">
                    6º Foro Latinoamericano de
                </p>
                <p class="ff-axia-bold fs-39">
                    Calidad y Seguridad <br>
                    en la Salud
                </p>
            </div>
            <div>
                <p class="ff-axia-bold fs-35">
                    <span class="mr-2">Preforo 28</span>
                    <span>Foro 29 y 30</span>
                </p>
                <p class="ff-axia fs-35">
                    Septiembre <span class="ff-axia=bold">2020</span>
                </p>
                <p class="ff-axia fs-30">Westin Lima Hotel</p>
            </div>
        </div>
        <div class="my-4">
            <a href="#" data-toggle="modal" data-target="#typeModal" class="btn light">
                Inscripción
                <i class="flaticon-arrow-point-to-right"></i>
            </a>
        </div>
    </section>
    <div class="modal fade" id="ticketsModal" tabindex="-1" role="dialog" aria-labelledby="ticketsModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="ff-axia fw-normal fs-30" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form name="tickets" action="">
                        <p>Número de entradas</p>
                        <div class="d-flex justify-content-center align-items-center my-4">
                            <button id="removeTicket" type="button" class="btn counter">-</button>
                            <input type="number" id="tickets" class="form-control" value="1" min="1">
                            <button id="addTicket" type="button" class="btn counter">+</button>
                        </div>
                        <p>Días a asistir </p>
                        <div class="my-4">
                            <div class="custom-control custom-checkbox custom-control-inline px-3">
                                <input type="checkbox" id="twentyEight" name="date1" class="custom-control-input">
                                <label class="custom-control-label" for="twentyEight">28</label>
                            </div>
                            <div class="custom-control custom-checkbox custom-control-inline px-3">
                                <input type="checkbox" id="twentyNine" name="date2" class="custom-control-input">
                                <label class="custom-control-label" for="twentyNine">29</label>
                            </div>
                            <div class="custom-control custom-checkbox custom-control-inline px-3">
                                <input type="checkbox" id="thirty" name="date3" class="custom-control-input">
                                <label class="custom-control-label" for="thirty">30</label>
                            </div>
                        </div>
                        <p>Agregar entradas</p>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark mr-4" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn dark" data-dismiss="modal" data-toggle="modal"
                        data-target="#typeModal">
                        Siguiente
                        <i class="flaticon-arrow-point-to-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="typeModal" tabindex="-1" role="dialog" aria-labelledby="typeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="ff-axia fw-normal fs-30" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul id="types" class="types">
                        <li data-value="common">
                            <p>General</p>
                            <img src="img/icon/man.svg" alt="General" width="80px" height="100px">
                        </li>
                        <li data-value="student">
                            <p>Estudiante</p>
                            <img src="img/icon/cap.svg" alt="Estudiante" width="100px">
                        </li>
                        <li data-value="nurse">
                            <p>Enfermera(o)</p>
                            <img src="img/icon/nurse.svg" alt="Enfermera" width="100px">
                        </li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark mr-4" data-dismiss="modal">Cancelar</button>
                    <a class="btn dark" href="/register?type=student">
                        Siguiente
                        <i class="flaticon-arrow-point-to-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
